{
  "version": 2,
  "builds": [
    { "src": "backend/api/**/*.ts", "use": "@vercel/node", "config": { "includeFiles": ["backend/prisma/**"] } },
    { "src": "frontend/package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
