{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/prisma/**"],
        "zeroConfig": false
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "buildCommand": "cd backend && npx prisma generate && cd .. && cd frontend && npm install && npm run build",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
